<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="25dip" />
            <gradient android:angle="45" android:startColor="@color/birumuda" android:endColor="@color/birutua"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="25dip" />
            <solid android:color="@color/birutua"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="25dip" />
            <gradient android:angle="0" android:startColor="@color/birutua" android:endColor="@color/birumuda" />
        </shape>
    </item>
</selector>