<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        android:id="@+id/cvKlik">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1">

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="10dp"
                      android:text="Nama Mata Kuliah"
                      android:textColor="@android:color/darker_gray"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="15dp"
                      android:layout_marginBottom="10dp"
                      android:text="Nama MK"
                      android:id="@+id/listNamaMatakuliahDosenJadwal"
                      android:textColor="@color/birutua"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="10dp"
                      android:text="Nama Dosen"
                      android:textColor="@android:color/darker_gray"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="15dp"
                      android:text="Nama Dosen"
                      android:layout_marginBottom="10dp"
                      android:id="@+id/listNamaDosenJadwal"
                      android:textColor="@android:color/black"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="10dp"
                      android:text="SKS"
                      android:textColor="@android:color/darker_gray"/>
            <TextView android:layout_width="match_parent"
                      android:id="@+id/listsks"
                      android:layout_height="wrap_content"
                      android:textSize="15dp"
                      android:text="3"
                      android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="120dp"
                android:padding="15dp"
                android:background="@drawable/kartu2"
                android:orientation="vertical"
                android:layout_height="match_parent">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="10dp"
                      android:text="Hari"
                      android:textColor="@android:color/background_light"/>
            <TextView android:layout_width="match_parent"
                      android:id="@+id/listhari"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="10dp"
                      android:textSize="15dp"
                      android:text="Senin"
                      android:textColor="#ffffff"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="10dp"
                      android:text="waktu"
                      android:textColor="@android:color/background_light"/>
            <TextView android:layout_width="match_parent"
                      android:id="@+id/listwaktu"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="10dp"
                      android:textSize="15dp"
                      android:text="14.40"
                      android:textColor="@android:color/background_light"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="10dp"
                      android:text="Ruangan"
                      android:textColor="#ffffff"/>
            <TextView android:layout_width="match_parent"
                      android:id="@+id/listruang"
                      android:layout_height="wrap_content"
                      android:textSize="15dp"
                      android:text="GU 401"
                      android:textColor="#ffffff"/>
         </LinearLayout>

    </LinearLayout>


</LinearLayout>
